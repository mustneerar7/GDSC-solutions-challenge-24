{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "src",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "target": "ES2022"
  },
  "include": ["src/**/*"],
}
